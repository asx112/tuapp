<%- include ./common/header.ejs  %>

    <div class="container">
        <div class="row">
            <div class="col-sm-10" style="margin-top:50px;">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        修改图片
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive input-form">

                            <form action="http://localhost:4000/product/update/<%=data._id%>" method="post" enctype="multipart/form-data">
                                <ul>

                                    <li> 图片预览: <img src="<%=data.pic%>" /></li>
                                    <li> 新图片: <input type="file" name="pic" /></li>

                                    <li>
                                        图片描述:
                                        <textarea name="description" id="" cols="60" rows="8"><%=data.description%></textarea>
                                    </li>
                                    <li>
                                        <br />
                                        <button type="submit" class="btn btn-default">提交</button>
                                    </li>

                                </ul>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <%- include ./common/footer.ejs  %>