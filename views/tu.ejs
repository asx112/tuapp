<%- include ./common/header.ejs  %>
    <div class="container-fluid">

        <div class="col-sm-10 col-sm-offset-1" style="margin-top:50px;">

            <div class="panel panel-default">

                <div class="panel-heading">
                    图册
                    <a href="/loginout" class="but btn-info" style="float:right;">点击退出</a>
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline">
                        <div class="form-group">
                            <button type="submit" class="btn btn-default"><a href="/add">添加</a></button>
                        </div>

                        <div class="form-group" style="float:right;">
                            <button type="submit" class="btn btn-default">删除全部</button>
                        </div>
                    </form>
                </div>
            </div>
            <div style="width: 1045px;">
                <ul id="stickies">

                    <% for(var i=0;i<arr.length;i++){  %>
                        <li>
                            <br>
                            <img src="<%=arr[i].pic%>" style="width:150px;" class="img-circle">
                            <br><br>
                            <span class="sticky">
                                <%=arr[i].description%>
                            </span>
                            <br>
                            <a href="/product/update/<%=arr[i].id%>" class="btn btn-default" style="float: left;margin-left: 20px;">修改</a>
                            <a href="/product/delete/<%=arr[i].id%>?img=<%=arr[i].pic%>" class="btn btn-default" style="float: right;margin-right: 20px;">删除</a>
                            <p class="aaa">
                                <%=moment(arr[i].updateAt).format('YYYY/MM/DD HH:mm:ss')%>
                            </p>
                        </li>
                        <% }%>
                </ul>

            </div>

        </div>
    </div>
    </div>

    <%- include  ./common/footer.ejs  %>